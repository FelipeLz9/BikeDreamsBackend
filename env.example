# ==============================================
# BikeDreams Backend - Environment Variables Template
# ==============================================
# Copy this file to .env.development, .env.staging, or .env.production
# and update the values according to your environment

# ==============================================
# APPLICATION CONFIGURATION
# ==============================================
NODE_ENV=development
PORT=3001
HOST=0.0.0.0
API_VERSION=v1

# ==============================================
# DATABASE CONFIGURATION
# ==============================================
# PostgreSQL Database URL
DATABASE_URL=postgresql://bikedreams_user:password@localhost:5432/bikedreams_db

# PostgreSQL individual settings (used by Docker Compose)
POSTGRES_USER=bikedreams_user
POSTGRES_PASSWORD=your_secure_database_password
POSTGRES_DB=bikedreams_db

# ==============================================
# REDIS CONFIGURATION
# ==============================================
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_secure_redis_password

# ==============================================
# SECURITY CONFIGURATION
# ==============================================
# JWT Secrets (generate strong secrets for production)
JWT_SECRET=your_super_secure_jwt_secret_min_32_characters
JWT_REFRESH_SECRET=your_super_secure_refresh_secret_different_from_jwt
REFRESH_TOKEN_SECRET=your_refresh_token_secret

# Token Expiry Settings
ACCESS_TOKEN_EXPIRY=15m
REFRESH_TOKEN_EXPIRY=7d

# Password Security
BCRYPT_ROUNDS=12
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_TIME=30

# ==============================================
# CORS & ORIGINS CONFIGURATION
# ==============================================
# CORS Origins (comma-separated for multiple origins)
CORS_ORIGIN=*
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
AUTH_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001
ADMIN_ALLOWED_ORIGINS=http://localhost:3000,http://localhost:3001

# ==============================================
# ADMIN CONFIGURATION
# ==============================================
# Admin User Creation (for initial setup)
ADMIN_EMAIL=admin@bikedreams.com
ADMIN_PASSWORD=CHANGE_ME_SECURE_PASSWORD_123!
ADMIN_NAME=Super Administrador

# Admin Security
ADMIN_ALLOWED_IPS=127.0.0.1,::1
REQUIRE_CLIENT_CERTS=false

# ==============================================
# EXTERNAL SERVICES
# ==============================================
# Scraper Integration
SCRAPER_API_URL=http://localhost:4000

# ==============================================
# EMAIL CONFIGURATION
# ==============================================
# SMTP Settings for notifications
SMTP_HOST=localhost
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your_email@example.com
SMTP_PASS=your_email_password
SMTP_FROM=security@bikedreams.com

# Security Alert Email
SECURITY_ALERT_EMAIL=security@bikedreams.com

# ==============================================
# MONITORING & LOGGING
# ==============================================
# Logging Levels
LOG_LEVEL=info
SECURITY_LOG_LEVEL=warn

# Monitoring
ENABLE_METRICS=true
HEALTH_CHECK_TOKEN=your_secure_health_check_token

# ==============================================
# NOTIFICATIONS
# ==============================================
# Slack Integration (optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/SLACK/WEBHOOK

# ==============================================
# SSL/TLS CONFIGURATION (Production Only)
# ==============================================
# SSL Certificate paths (for production)
SSL_CERT_PATH=/etc/ssl/certs/bikedreams.crt
SSL_KEY_PATH=/etc/ssl/private/bikedreams.key

# ==============================================
# DOCKER CONFIGURATION
# ==============================================
# Docker Registry (if using private registry)
DOCKER_REGISTRY=

# Image Configuration
IMAGE_NAME=bikedreams-backend

# ==============================================
# DEPLOYMENT CONFIGURATION
# ==============================================
# Health Check
HEALTH_CHECK_URL=http://localhost:3001/health
HEALTH_CHECK_TIMEOUT=300
HEALTH_CHECK_INTERVAL=5

# Backup Configuration
MAX_BACKUPS=5

# ==============================================
# DEVELOPMENT SPECIFIC
# ==============================================
# Development Tools
ENABLE_SWAGGER=true
ENABLE_DEBUG_ROUTES=true
ENABLE_TEST_ROUTES=true

# ==============================================
# STAGING SPECIFIC
# ==============================================
# Staging Environment
STAGING_DOMAIN=staging.bikedreams.com
STAGING_FRONTEND_URL=https://staging.bikedreams.com

# ==============================================
# PRODUCTION SPECIFIC
# ==============================================
# Production Environment
PRODUCTION_DOMAIN=api.bikedreams.com
PRODUCTION_FRONTEND_URL=https://bikedreams.com

# Production Security
ENABLE_STRICT_SECURITY=true
ENABLE_RATE_LIMITING=true
ENABLE_IP_BLOCKING=true
ENABLE_SUSPICIOUS_ACTIVITY_DETECTION=true

# ==============================================
# NOTES
# ==============================================
# 1. Never commit actual .env files to version control
# 2. Generate strong, unique secrets for each environment
# 3. Use different database names for each environment
# 4. Configure CORS origins appropriately for each environment
# 5. Enable/disable features based on environment needs
# 6. Use environment-specific domains and URLs
