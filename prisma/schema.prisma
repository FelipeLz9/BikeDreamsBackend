generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  avatar    String? // Imagen opcional
  role      Role     @default(CLIENT)
  racesWon  Int? // Solo para clientes
  photos    String[] // Para almacenar URLs de fotos
  createdAt DateTime @default(now())

  forumPosts ForumPost[]
  donations  Donation[]
}

model Event {
  id        String   @id @default(uuid())
  name      String
  date      DateTime
  location  String
  details   String?
  createdAt DateTime @default(now())
}

model ForumPost {
  id        String   @id @default(uuid())
  title     String
  content   String
  user      User     @relation(fields: [userId], references: [id])
  userId    String
  createdAt DateTime @default(now())
}

model Donation {
  id        String   @id @default(uuid())
  amount    Float
  user      User?    @relation(fields: [userId], references: [id]) // Ahora es opcional
  userId    String?  // Permite `NULL` para donaciones an√≥nimas
  donorName String?  // Guardamos el nombre del donante si no es usuario registrado
  createdAt DateTime @default(now())
}

model News {
  id        String   @id @default(uuid())
  title     String
  content   String
  createdAt DateTime @default(now())
}

model Rider {
  id        String   @id @default(uuid())
  name      String
  age       Int
  racesWon  Int
  photo     String
  createdAt DateTime @default(now())
}

enum Role {
  ADMIN
  CLIENT
}
