# Database
DATABASE_URL="postgresql://username:password@localhost:5432/bikedreams_db"

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-here-must-be-complex-and-random"
JWT_REFRESH_SECRET="your-super-secret-refresh-token-key-different-from-jwt"
ACCESS_TOKEN_EXPIRY="15m"
REFRESH_TOKEN_EXPIRY="7d"

# Security Configuration
BCRYPT_ROUNDS="12"
MAX_LOGIN_ATTEMPTS="5"
LOCKOUT_TIME="30"

# Server Configuration
NODE_ENV="production"
PORT=3001
HOST="0.0.0.0"

# CORS Configuration
CORS_ORIGIN="https://your-frontend-domain.com"

# Admin Configuration
ADMIN_EMAIL="admin@example.com"
ADMIN_PASSWORD="CHANGE_ME_SECURE!"
ADMIN_NAME="Administrator"

# Rate Limiting (optional - defaults in code)
RATE_LIMIT_WINDOW_MS="900000"
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_LOGIN_MAX="5"
RATE_LIMIT_REGISTER_MAX="3"

# Security Monitoring
SECURITY_ALERT_EMAIL="security@example.com"
ENABLE_SECURITY_LOGS="true"
