    "env:check:dev": "NODE_ENV=development node -e \"console.log('NODE_ENV:', process.env.NODE_ENV)\"",
    "env:check:staging": "NODE_ENV=staging node -e \"console.log('NODE_ENV:', process.env.NODE_ENV)\"",
    "env:check:prod": "NODE_ENV=production node -e \"console.log('NODE_ENV:', process.env.NODE_ENV)\"",
    "env:check:test": "NODE_ENV=test node -e \"console.log('NODE_ENV:', process.env.NODE_ENV)\"",
    "ts:build": "./scripts/tsconfig-manager.sh build",
    "ts:check": "./scripts/tsconfig-manager.sh check",
    "ts:watch": "./scripts/tsconfig-manager.sh watch",
    "ts:clean": "./scripts/tsconfig-manager.sh clean",
    "ts:validate": "./scripts/tsconfig-manager.sh validate",
    "ts:list": "./scripts/tsconfig-manager.sh list",
    "clean": "rm -rf dist node_modules/.cache coverage .nyc_output",
    "clean:all": "rm -rf dist node_modules node_modules/.cache coverage .nyc_output logs/*.log",
    "clean:logs": "rm -rf logs/*.log",
    "clean:cache": "rm -rf node_modules/.cache",
    "clean:coverage": "rm -rf coverage .nyc_output",
    "install:clean": "rm -rf node_modules package-lock.json && npm install",
    "install:dev": "npm install --only=dev",
    "install:prod": "npm install --only=production",
    "install:audit": "npm audit --audit-level=moderate",
    "install:audit:fix": "npm audit fix",
    "outdated": "npm outdated",
    "update": "npm update",
    "update:check": "npm outdated --depth=0",
    "health": "curl -f http://localhost:3001/health || exit 1",
    "health:dev": "curl -f http://localhost:3001/health || exit 1",
    "health:staging": "curl -f http://localhost:3001/health || exit 1",
    "health:prod": "curl -f http://localhost:3001/health || exit 1",
    "status": "ps aux | grep -E '(bun|node).*src/index.ts' | grep -v grep",
    "status:pm2": "pm2 status",
    "logs:app": "tail -f logs/app.log",
    "logs:error": "tail -f logs/error.log",
    "logs:security": "tail -f logs/security.log",
    "logs:all": "tail -f logs/*.log",
    "monitor": "htop",
    "monitor:memory": "free -h",
    "monitor:disk": "df -h",
    "monitor:network": "netstat -tulpn",
    "ci:install": "npm ci",
    "ci:build": "npm run build:prod",
    "ci:test": "npm run test:ci",
    "ci:test:security": "npm run test:security:ci",
    "ci:lint": "npm run lint",
    "ci:typecheck": "npm run typecheck:prod",
    "ci:deploy:staging": "./scripts/deploy.sh --env=staging",
    "ci:deploy:prod": "./scripts/deploy.sh --env=production",
    "ci:rollback:staging": "./scripts/deploy.sh rollback --env=staging",
    "ci:rollback:prod": "./scripts/deploy.sh rollback --env=production",
    "ci:backup": "npm run db:backup:prod",
    "ci:restore": "npm run db:restore",
    "maintenance:backup": "npm run db:backup:prod && npm run backup:files",
    "maintenance:restore": "npm run db:restore && npm run restore:files",
    "maintenance:cleanup": "npm run clean:logs && npm run clean:cache",
    "maintenance:optimize": "npm run db:optimize && npm run cache:clear",
    "maintenance:update": "npm run update && npm run build:prod",
    "maintenance:security": "npm run security:audit && npm run security:scan",
    "maintenance:health": "npm run health:prod && npm run status",
    "maintenance:logs": "npm run logs:all | grep -E '(ERROR|WARN|FATAL)'",
    "prisma:generate": "prisma generate",
    "prisma:push": "prisma db push",
    "prisma:migrate": "prisma migrate deploy",
    "create-admin": "bun run src/scripts/createAdmin.ts"
  },
