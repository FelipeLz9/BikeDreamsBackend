    "security:audit": "npm audit --audit-level=moderate",
    "security:audit:fix": "npm audit fix",
    "security:scan": "./scripts/security-scan.sh",
    "lint": "eslint src/**/*.{ts,tsx,js,jsx}",
    "lint:fix": "eslint src/**/*.{ts,tsx,js,jsx} --fix",
    "lint:dev": "eslint src/**/*.{ts,tsx,js,jsx} --env development",
    "lint:staging": "eslint src/**/*.{ts,tsx,js,jsx} --env staging",
    "lint:prod": "eslint src/**/*.{ts,tsx,js,jsx} --env production",
    "lint:test": "eslint src/**/*.{ts,tsx,js,jsx} --env test",
    "format": "prettier --write src/**/*.{ts,tsx,js,jsx,json,md}",
    "format:check": "prettier --check src/**/*.{ts,tsx,js,jsx,json,md}",
    "format:dev": "prettier --write src/**/*.{ts,tsx,js,jsx,json,md} --config .prettierrc.dev",
    "format:prod": "prettier --write src/**/*.{ts,tsx,js,jsx,json,md} --config .prettierrc.prod",
    "typecheck": "tsc --noEmit",
    "typecheck:dev": "tsc --noEmit --project tsconfig.development.json",
    "typecheck:staging": "tsc --noEmit --project tsconfig.staging.json",
    "typecheck:prod": "tsc --noEmit --project tsconfig.production.json",
    "typecheck:test": "tsc --noEmit --project tsconfig.test.json",
