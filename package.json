    "docker:run:dev": "docker run -p 3001:3001 --env-file .env.development bikedreams-backend:dev",
    "docker:run:staging": "docker run -p 3001:3001 --env-file .env.staging bikedreams-backend:staging",
    "docker:run:prod": "docker run -p 3001:3001 --env-file .env.production bikedreams-backend:prod",
