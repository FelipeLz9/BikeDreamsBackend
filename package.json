    "docker:build:dev": "docker build -t bikedreams-backend:dev --target development .",
    "docker:build:staging": "docker build -t bikedreams-backend:staging --target staging .",
    "docker:build:prod": "docker build -t bikedreams-backend:prod --target production .",
