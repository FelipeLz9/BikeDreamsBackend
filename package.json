{
  "name": "bikedreams-backend",
  "version": "1.0.0",
  "main": "index.js",
  "scripts": {
    "dev": "bun run --watch src/index.ts",
    "dev:env": "bun run --env-file=.env.development --watch src/index.ts",
    "dev:debug": "bun run --env-file=.env.development --inspect src/index.ts",
    "dev:staging": "bun run --env-file=.env.staging --watch src/index.ts",
    "dev:test": "bun run --env-file=.env.test --watch src/index.ts",
    "dev:clean": "rm -rf dist && bun run dev:env",
    "dev:restart": "pkill -f 'bun.*src/index.ts' || true && bun run dev:env",
    "dev:logs": "tail -f logs/*.log",
    "dev:monitor": "bun run dev:env & bun run dev:logs",
    "build": "tsc --project tsconfig.json",
    "build:dev": "tsc --project tsconfig.development.json",
    "build:staging": "tsc --project tsconfig.staging.json",
    "build:prod": "tsc --project tsconfig.production.json",
    "build:test": "tsc --project tsconfig.test.json",
    "build:all": "npm run build:dev && npm run build:staging && npm run build:prod && npm run build:test",
    "build:clean": "rm -rf dist && npm run build",
    "build:clean:dev": "rm -rf dist/dev && npm run build:dev",
    "build:clean:staging": "rm -rf dist/staging && npm run build:staging",
    "build:clean:prod": "rm -rf dist/production && npm run build:prod",
    "build:clean:test": "rm -rf dist/test && npm run build:test",
    "build:incremental": "tsc --build --verbose",
    "build:force": "rm -rf dist && rm -rf node_modules/.cache && npm run build:all",
    "start": "bun run --env-file=.env.production src/index.ts",
    "start:dev": "bun run --env-file=.env.development src/index.ts",
    "start:staging": "bun run --env-file=.env.staging src/index.ts",
    "start:test": "bun run --env-file=.env.test src/index.ts",
    "start:prod": "NODE_ENV=production bun run --env-file=.env.production src/index.ts",
    "start:prod:direct": "bun run src/index.ts",
    "start:debug": "bun run --env-file=.env.development --inspect src/index.ts",
    "start:cluster": "NODE_ENV=production node -r ts-node/register dist/production/index.js",
    "start:pm2": "pm2 start ecosystem.config.js",
    "start:pm2:dev": "pm2 start ecosystem.config.js --env development",
    "start:pm2:staging": "pm2 start ecosystem.config.js --env staging",
    "start:pm2:prod": "pm2 start ecosystem.config.js --env production",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate deploy",
    "db:migrate:dev": "prisma migrate dev",
    "db:migrate:staging": "prisma migrate deploy --schema=prisma/schema.prisma",
    "db:migrate:prod": "prisma migrate deploy --schema=prisma/schema.prisma",
    "db:migrate:test": "prisma migrate deploy --schema=prisma/schema.prisma",
    "db:reset": "prisma migrate reset",
    "db:reset:dev": "prisma migrate reset --force",
    "db:seed": "bun run src/scripts/seed.ts",
    "db:seed:dev": "bun run --env-file=.env.development src/scripts/seed.ts",
    "db:seed:staging": "bun run --env-file=.env.staging src/scripts/seed.ts",
    "db:seed:prod": "bun run --env-file=.env.production src/scripts/seed.ts",
    "db:backup": "bun run src/scripts/backup.ts",
    "db:backup:dev": "bun run --env-file=.env.development src/scripts/backup.ts",
    "db:backup:staging": "bun run --env-file=.env.staging src/scripts/backup.ts",
    "db:backup:prod": "bun run --env-file=.env.production src/scripts/backup.ts",
    "db:restore": "bun run src/scripts/restore.ts",
    "db:status": "prisma migrate status",
    "db:studio": "prisma studio",
    "db:studio:dev": "prisma studio --schema=prisma/schema.prisma",
    "admin:create": "bun run src/scripts/createAdmin.ts",
    "admin:create:dev": "bun run --env-file=.env.development src/scripts/createAdmin.ts",
    "admin:create:staging": "bun run --env-file=.env.staging src/scripts/createAdmin.ts",
    "admin:create:prod": "bun run --env-file=.env.production src/scripts/createAdmin.ts",
    "admin:create:test": "bun run --env-file=.env.test src/scripts/createAdmin.ts",
    "admin:list": "bun run src/scripts/listAdmins.ts",
    "admin:list:dev": "bun run --env-file=.env.development src/scripts/listAdmins.ts",
    "admin:reset": "bun run src/scripts/resetAdmin.ts",
    "admin:reset:dev": "bun run --env-file=.env.development src/scripts/resetAdmin.ts",
    "admin:reset:staging": "bun run --env-file=.env.staging src/scripts/resetAdmin.ts",
    "admin:reset:prod": "bun run --env-file=.env.production src/scripts/resetAdmin.ts",
    "test": "bun run --env-file=.env.test jest",
    "test:watch": "bun run --env-file=.env.test jest --watch",
    "test:dev": "bun run --env-file=.env.development jest",
    "test:staging": "bun run --env-file=.env.staging jest",
    "test:prod": "bun run --env-file=.env.production jest",
    "test:unit": "bun run --env-file=.env.test jest --testPathPattern=unit",
    "test:integration": "bun run --env-file=.env.test jest --testPathPattern=integration",
    "test:e2e": "bun run --env-file=.env.test jest --testPathPattern=e2e",
    "test:coverage": "bun run --env-file=.env.test jest --coverage",
    "test:coverage:dev": "bun run --env-file=.env.development jest --coverage",
    "test:coverage:staging": "bun run --env-file=.env.staging jest --coverage",
    "test:coverage:prod": "bun run --env-file=.env.production jest --coverage",
    "test:ci": "bun run --env-file=.env.test jest --ci --coverage --watchAll=false",
    "test:debug": "bun run --env-file=.env.test jest --detectOpenHandles --forceExit",
    "test:verbose": "bun run --env-file=.env.test jest --verbose",
    "test:silent": "bun run --env-file=.env.test jest --silent",
    "test:update": "bun run --env-file=.env.test jest --updateSnapshot",
    "test:clear": "bun run --env-file=.env.test jest --clearCache",
    "test:security": "bun run --env-file=.env.test jest --config jest.config.security.js",
    "test:security:coverage": "bun run --env-file=.env.test jest --config jest.config.security.js --coverage",
    "test:security:watch": "bun run --env-file=.env.test jest --config jest.config.security.js --watch",
    "test:security:ci": "bun run --env-file=.env.test jest --config jest.config.security.js --ci --coverage --watchAll=false",
    "test:penetration": "bun run --env-file=.env.test jest --config jest.config.security.js --testPathPattern=penetration.test.ts",
    "test:load": "bun run --env-file=.env.test jest --config jest.config.security.js --testPathPattern=load.test.ts",
    "test:headers": "bun run --env-file=.env.test jest --config jest.config.security.js --testPathPattern=headers.test.ts",
    "test:validation": "bun run --env-file=.env.test jest --config jest.config.security.js --testPathPattern=validation.test.ts",
    "test:auth": "bun run --env-file=.env.test jest --config jest.config.security.js --testPathPattern=auth.test.ts",
    "test:rbac": "bun run --env-file=.env.test jest --config jest.config.security.js --testPathPattern=rbac.test.ts",
