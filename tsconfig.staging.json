{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    /* ==============================================
     * BikeDreams Backend - Staging TypeScript Configuration
     * ==============================================
     * Optimized for staging environment with production-like settings
     * but with some debugging capabilities.
     */

    /* Staging-specific overrides */
    "target": "ES2020",                                   /* Slightly older target for better compatibility */
    "module": "NodeNext",                                 /* Use Node.js module system */
    "moduleResolution": "NodeNext",                       /* Use Node.js module resolution */

    /* Emit - Staging Optimized */
    "declaration": true,                                  /* Generate declaration files for staging */
    "declarationMap": true,                               /* Generate declaration maps for debugging */
    "sourceMap": true,                                    /* Generate source maps for debugging */
    "inlineSourceMap": false,                             /* Use separate source map files */
    "removeComments": true,                               /* Remove comments for smaller bundle */
    "noEmit": false,                                      /* Emit files for staging */

    /* Type Checking - Staging Strict */
    "strict": true,                                       /* Enable strict mode */
    "noImplicitAny": true,                                /* Error on implicit any */
    "strictNullChecks": true,                             /* Enable null checks */
    "strictFunctionTypes": true,                          /* Enable strict function types */
    "noImplicitReturns": true,                            /* Error on missing returns */
    "noFallthroughCasesInSwitch": true,                   /* Error on switch fallthrough */
    "noUncheckedIndexedAccess": true,                     /* Enable unchecked index access checks */
    "exactOptionalPropertyTypes": true,                   /* Enable exact optional property types */
    "noUnusedLocals": true,                               /* Error on unused locals */
    "noUnusedParameters": true,                           /* Error on unused parameters */
    "allowUnreachableCode": false,                        /* Error on unreachable code */

    /* Staging Features */
    "allowJs": false,                                     /* Don't allow JavaScript files */
    "checkJs": false,                                     /* Don't type check JS files */
    "skipLibCheck": true,                                 /* Skip lib checking for faster compilation */

    /* Output - Staging */
    "outDir": "./dist/staging",                           /* Staging output directory */
    "rootDir": "./src",                                   /* Source root directory */
    "declarationDir": "./dist/staging/types",             /* Staging declaration directory */

    /* Incremental Compilation - Staging */
    "incremental": true,                                  /* Enable incremental compilation */
    "tsBuildInfoFile": "./dist/staging/.tsbuildinfo",    /* Staging build info file */
    "composite": false,                                   /* Not a composite project */

    /* Staging Optimizations */
    "importHelpers": true,                                /* Use tslib helpers for better tree-shaking */
    "downlevelIteration": true,                           /* Enable downlevel iteration */

    /* Path Mapping - Staging */
    "baseUrl": "./",
    "paths": {
      "@/*": ["src/*"],
      "@/types/*": ["src/types/*"],
      "@/utils/*": ["src/utils/*"],
      "@/services/*": ["src/services/*"],
      "@/controllers/*": ["src/controllers/*"],
      "@/middleware/*": ["src/middleware/*"],
      "@/routes/*": ["src/routes/*"],
      "@/schemas/*": ["src/schemas/*"],
      "@/tests/*": ["src/tests/*"],
      "@/config/*": ["src/config/*"]                      /* Staging config path */
    }
  },

  /* Include - Staging */
  "include": [
    "src/**/*",                                           /* Include all source files */
    "src/**/*.ts",                                        /* Include TypeScript files */
    "src/**/*.tsx",                                       /* Include TypeScript React files */
    "src/**/*.json"                                       /* Include JSON files */
  ],

  /* Exclude - Staging */
  "exclude": [
    "node_modules",                                       /* Exclude node_modules */
    "dist",                                               /* Exclude build output */
    "build",                                              /* Exclude build output */
    "coverage",                                           /* Exclude coverage reports */
    "**/*.test.ts",                                       /* Exclude test files from build */
    "**/*.spec.ts",                                       /* Exclude spec files from build */
    "**/*.test.js",                                       /* Exclude test JS files */
    "**/*.spec.js",                                       /* Exclude spec JS files */
    "**/__tests__/**",                                    /* Exclude test directories */
    "**/tests/**",                                        /* Exclude test directories */
    "**/*.d.ts",                                          /* Exclude declaration files */
    "**/node_modules/**",                                 /* Exclude nested node_modules */
    "src/**/*.js",                                        /* Exclude JavaScript files */
    "src/**/*.jsx"                                        /* Exclude JavaScript React files */
  ],

  /* Staging-specific settings */
  "ts-node": {
    "esm": true,                                          /* Enable ESM support */
    "experimentalSpecifierResolution": "node",            /* Use Node.js specifier resolution */
    "transpileOnly": false,                               /* Enable type checking for staging */
    "files": true,                                        /* Include files in compilation */
    "compilerOptions": {
      "module": "NodeNext",                               /* Use NodeNext for ts-node */
      "target": "ES2020"                                  /* Staging target for ts-node */
    }
  }
}
