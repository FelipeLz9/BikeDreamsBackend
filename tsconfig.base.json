{
  "compilerOptions": {
    /* ==============================================
     * BikeDreams Backend - Base TypeScript Configuration
     * ==============================================
     * This is the base configuration shared by all environments.
     * Environment-specific configs extend this base.
     */

    /* Language and Environment */
    "target": "ES2022",                                    /* Modern JavaScript target for better performance */
    "lib": ["ES2022", "DOM"],                             /* Include modern JavaScript and DOM types */
    "useDefineForClassFields": true,                      /* Use modern class field semantics */

    /* Modules */
    "module": "NodeNext",                                 /* Use Node.js module system */
    "moduleResolution": "NodeNext",                       /* Use Node.js module resolution */
    "allowSyntheticDefaultImports": true,                 /* Allow default imports from modules without default export */
    "esModuleInterop": true,                              /* Enable interop between CommonJS and ES modules */
    "resolveJsonModule": true,                            /* Allow importing JSON files */
    "allowImportingTsExtensions": false,                  /* Disable importing .ts extensions */
    "noResolve": false,                                   /* Allow TypeScript to resolve modules */

    /* Emit */
    "declaration": true,                                  /* Generate declaration files */
    "declarationMap": true,                               /* Generate source maps for declarations */
    "sourceMap": true,                                    /* Generate source maps for debugging */
    "removeComments": false,                              /* Keep comments in output */
    "importHelpers": true,                                /* Use tslib helpers for better tree-shaking */
    "downlevelIteration": true,                           /* Enable downlevel iteration for better compatibility */

    /* Interop Constraints */
    "isolatedModules": true,                              /* Ensure each file can be transpiled independently */
    "forceConsistentCasingInFileNames": true,             /* Enforce consistent casing in imports */
    "allowUmdGlobalAccess": true,                         /* Allow accessing UMD globals */

    /* Type Checking - Base Strict Settings */
    "strict": true,                                       /* Enable all strict type-checking options */
    "noImplicitAny": true,                                /* Error on expressions with implied 'any' type */
    "strictNullChecks": true,                             /* Enable strict null checks */
    "strictFunctionTypes": true,                          /* Enable strict function type checking */
    "strictBindCallApply": true,                          /* Enable strict bind, call, and apply checks */
    "strictPropertyInitialization": true,                 /* Enable strict property initialization checks */
    "noImplicitThis": true,                               /* Error when 'this' has type 'any' */
    "useUnknownInCatchVariables": true,                   /* Use 'unknown' for catch variables */
    "alwaysStrict": true,                                 /* Always emit 'use strict' */
    "noImplicitReturns": true,                            /* Error on code paths that don't return */
    "noFallthroughCasesInSwitch": true,                   /* Error on fallthrough cases in switch */
    "noUncheckedIndexedAccess": true,                     /* Add 'undefined' to indexed access types */
    "noImplicitOverride": true,                           /* Require 'override' modifier for overrides */
    "exactOptionalPropertyTypes": true,                   /* Enable exact optional property types */

    /* Completeness */
    "skipLibCheck": true,                                 /* Skip type checking of declaration files */
    "skipDefaultLibCheck": true,                          /* Skip type checking of default library files */

    /* Path Mapping */
    "baseUrl": "./",                                      /* Base directory for non-relative imports */
    "paths": {
      "@/*": ["src/*"],                                   /* Map @/* to src/* */
      "@/types/*": ["src/types/*"],                       /* Map @/types/* to src/types/* */
      "@/utils/*": ["src/utils/*"],                       /* Map @/utils/* to src/utils/* */
      "@/services/*": ["src/services/*"],                 /* Map @/services/* to src/services/* */
      "@/controllers/*": ["src/controllers/*"],           /* Map @/controllers/* to src/controllers/* */
      "@/middleware/*": ["src/middleware/*"],             /* Map @/middleware/* to src/middleware/* */
      "@/routes/*": ["src/routes/*"],                     /* Map @/routes/* to src/routes/* */
      "@/schemas/*": ["src/schemas/*"],                   /* Map @/schemas/* to src/schemas/* */
      "@/tests/*": ["src/tests/*"]                        /* Map @/tests/* to src/tests/* */
    },

    /* Output */
    "outDir": "./dist",                                   /* Output directory for compiled files */
    "rootDir": "./src",                                   /* Root directory of source files */
    "declarationDir": "./dist/types",                     /* Directory for declaration files */

    /* JavaScript Support */
    "allowJs": false,                                     /* Don't allow JavaScript files */
    "checkJs": false,                                     /* Don't type check JavaScript files */

    /* Advanced */
    "incremental": true,                                  /* Enable incremental compilation */
    "tsBuildInfoFile": "./dist/.tsbuildinfo",            /* Location of incremental compilation info */
    "composite": false,                                   /* Not a composite project */
    "disableSourceOfProjectReferenceRedirect": false,    /* Allow project reference redirects */
    "disableSolutionSearching": false,                    /* Allow solution searching */
    "disableReferencedProjectLoad": false                 /* Allow referenced project loading */
  },

  /* Include and Exclude Patterns */
  "include": [
    "src/**/*",                                           /* Include all source files */
    "src/**/*.ts",                                        /* Include TypeScript files */
    "src/**/*.tsx",                                       /* Include TypeScript React files */
    "src/**/*.js",                                        /* Include JavaScript files */
    "src/**/*.jsx"                                        /* Include JavaScript React files */
  ],

  "exclude": [
    "node_modules",                                       /* Exclude node_modules */
    "dist",                                               /* Exclude build output */
    "build",                                              /* Exclude build output */
    "coverage",                                           /* Exclude coverage reports */
    "**/*.test.ts",                                       /* Exclude test files from base build */
    "**/*.spec.ts",                                       /* Exclude spec files from base build */
    "**/*.test.js",                                       /* Exclude test JS files */
    "**/*.spec.js",                                       /* Exclude spec JS files */
    "**/__tests__/**",                                    /* Exclude test directories */
    "**/tests/**",                                        /* Exclude test directories */
    "**/*.d.ts"                                           /* Exclude declaration files */
  ],

  /* TypeScript Project References */
  "references": [],

  /* Compiler Options for Different Environments */
  "ts-node": {
    "esm": true,                                          /* Enable ESM support for ts-node */
    "experimentalSpecifierResolution": "node"             /* Use Node.js specifier resolution */
  }
}
